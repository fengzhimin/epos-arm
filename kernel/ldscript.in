OUTPUT_FORMAT("elf32-littlearm")
OUTPUT_ARCH(arm)

ENTRY(_entry)
SECTIONS {
  . = 0x8000;
  .text : {
    *(.text)
  }

  . = ALIGN(4096);
  .rodata : {
    *(.rodata)
  }
  .rdata : {
    *(.rdata)
  }
  .data : {
    *(.data)
  }
  . = ALIGN(4096);
  _edata = .;

  .bss : {
    *(.bss)
    *(COMMON)
  }

  . = ALIGN(4096);
  _end = .;
}
